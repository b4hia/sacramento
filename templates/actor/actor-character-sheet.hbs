<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header">
    {{!-- Foto do Personagem --}}
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
    
    <div class="header-fields">
      <h1 class="charname">
        <label>NOME:</label>
        <input name="name" type="text" value="{{actor.name}}" placeholder="Nome"/>
      </h1>
      <div class="header-stats grid grid-4col">
        <div class="stat-item">
          <label>AÇÕES</label>
          <input type="text" name="system.attributes.actions.value" value="{{system.attributes.actions.value}}" readonly/>
        </div>
        <div class="stat-item">
          <label>MOVIMENTOS</label>
          <input type="text" name="system.attributes.moviment.value" value="{{system.attributes.moviment.value}}" readonly/>
        </div>
        <div class="stat-item">
          <label>DEFESA</label>
          <input type="text" name="system.attributes.defense.value" value="{{system.attributes.defense.value}}"/>
        </div>
        <div class="stat-item">
          <label>INICIATIVA</label>
          <input type="text" value="0" readonly/>
        </div>
      </div>
    </div>
  </header>

  <section class="main-content grid grid-2col">
    {{!-- Coluna Esquerda: Atributos e Antecedentes --}}
    <aside class="sidebar-left">
      <h2 class="section-title">ATRIBUTOS</h2>
      <div class="abilities-grid">
        {{#each system.abilities as |ability key|}}
        <div class="ability-card">
          <label class="rollable" data-roll="1d6+@abilities.{{key}}.value" data-label="{{ability.label}}">{{ability.label}}</label>
          <input type="number" name="system.abilities.{{key}}.value" value="{{ability.value}}"/>
        </div>
        {{/each}}
      </div>

      <h2 class="section-title">ANTECEDENTES</h2>
      <div class="antecedents-list">
        {{!-- Exemplo de como listar pericias baseadas no PDF --}}
        <div class="antecedente-item">
          <label class="rollable" data-roll="1d6+@int.value" data-label="Atenção">ATENÇÃO</label>
          <input type="text" value="1d6+@int" readonly/>
        </div>
        {{!-- Repita para os outros antecedentes do PDF --}}
      </div>
    </aside>

    {{!-- Coluna Direita: Vida e Dor --}}
    <section class="status-column">
      <div class="resource-group pain-box">
        <label>CÍRCULOS DE DOR</label>
        <div class="circles-row">
          <input type="number" name="system.pain.value" value="{{system.pain.value}}"/>
          <span class="max">/ {{system.pain.max}}</span>
        </div>
        <p class="pain-footer">1- Atordoamento | 2- Queda | 3- Distração...</p>
      </div>

      <div class="resource-group life-box">
        <label>CÍRCULOS DE VIDA</label>
        <div class="circles-row">
          <input type="number" name="system.health.value" value="{{system.health.value}}"/>
          <span class="max">/ {{system.health.max}}</span>
        </div>
      </div>
    </section>
  </section>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="features">Habilidades</a>
    <a class="item" data-tab="items">Itens</a>
    <a class="item" data-tab="mount">Montaria</a>
    <a class="item" data-tab="description">Biografia</a>
  </nav>

  <section class="sheet-body">
    <div class="tab features" data-group="primary" data-tab="features">
       {{> "systems/sacramento-rpg/templates/actor/parts/actor-features.hbs"}}
    </div>
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/sacramento-rpg/templates/actor/parts/actor-items.hbs"}}
    </div>
    <div class="tab mount" data-group="primary" data-tab="mount">
       {{!-- Crie um parcial para montaria se quiser --}}
       <h2 class="section-title">DADOS DA MONTARIA</h2>
    </div>
    <div class="tab biography" data-group="primary" data-tab="description">
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>
  </section>
</form>