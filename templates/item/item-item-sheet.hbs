<form class="{{cssClass}} flexcol" autocomplete="off">
    {{!-- Cabeçalho Modular --}}
    {{> "systems/sacramento-rpg/templates/item/parts/item-header.hbs" }}

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Descrição</a>
        <a class="item" data-tab="details">Detalhes</a>
        <a class="item" data-tab="effects">Efeitos</a>
    </nav>

    <section class="sheet-body">
        {{!-- Aba de Descrição --}}
        <div class="tab description" data-group="primary" data-tab="description">
            {{editor system.description target="system.description" engine="prosemirror" button=true editable=editable}}
        </div>

        {{!-- Aba de Detalhes Dinâmica --}}
        <div class="tab details" data-group="primary" data-tab="details">
            {{> (concat "systems/sacramento-rpg/templates/item/details/details-" item.type ".hbs") }}
        </div>
    </section>
</form>